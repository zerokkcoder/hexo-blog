<header class="header">
    <div class="header-inner">
        <!-- 网站标题/Logo -->
        <div class="site-brand">
            <a href="<%- url_for() %>" class="brand">
                <% if (theme.logo) { %>
                    <img src="<%- url_for(theme.logo) %>" alt="<%= config.title %>">
                <% } else { %>
                    <%= config.title %>
                <% } %>
            </a>
            <% if (config.subtitle) { %>
                <p class="subtitle"><%= config.subtitle %></p>
            <% } %>
        </div>

        <!-- 导航菜单 -->
        <nav class="site-nav">
            <ul class="menu">
                <% for (let name in theme.menu) { %>
                    <li class="menu-item">
                        <a href="<%- url_for(theme.menu[name]) %>" 
                           class="<%= is_current(theme.menu[name]) ? 'active' : '' %>">
                            <%= name %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>

        <!-- 移动端菜单按钮 -->
        <div class="menu-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</header>