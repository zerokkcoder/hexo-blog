<footer class="footer">
    <div class="footer-inner">
        <div class="footer-content">
            <div class="footer-section">
                <div class="copyright">
                    <!-- 版权信息 -->
                    <span>&copy; <%= new Date().getFullYear() %> <%= config.author || config.title %></span>
                    <span class="separator">|</span>
                    <span>Powered by <a href="https://hexo.io" target="_blank">Hexo</a></span>
                    <span class="separator">|</span>
                    <span>Theme <a href="https://github.com/your-username/hexo-theme-code-simple" target="_blank">CodeSimple</a></span>
                </div>
            </div>

            <!-- 社交链接 -->
            <div class="footer-section">
                <div class="social-links">
                    <% if (theme.social.github) { %>
                        <a href="<%= theme.social.github %>" target="_blank" title="GitHub">
                            <i class="icon-github"></i>
                        </a>
                    <% } %>
                    <% if (theme.social.twitter) { %>
                        <a href="<%= theme.social.twitter %>" target="_blank" title="Twitter">
                            <i class="icon-twitter"></i>
                        </a>
                    <% } %>
                    <% if (theme.social.email) { %>
                        <a href="mailto:<%= theme.social.email %>" title="Email">
                            <i class="icon-email"></i>
                        </a>
                    <% } %>
                </div>
            </div>

            <!-- 站点统计 -->
            <% if (theme.footer.statistics) { %>
            <div class="footer-section">
                <div class="site-stats">
                    <span class="site-stat-item">
                        文章 <%= site.posts.length %>
                    </span>
                    <span class="separator">|</span>
                    <span class="site-stat-item">
                        分类 <%= site.categories.length %>
                    </span>
                    <span class="separator">|</span>
                    <span class="site-stat-item">
                        标签 <%= site.tags.length %>
                    </span>
                </div>
            </div>
            <% } %>

            <!-- ICP备案信息 -->
            <% if (theme.footer.icp) { %>
            <div class="footer-section">
                <div class="icp">
                    <a href="https://beian.miit.gov.cn/" target="_blank"><%= theme.footer.icp %></a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</footer>